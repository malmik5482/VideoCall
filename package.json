{
  "name": "videocall-app",
  "version": "1.0.0",
  "description": "WebRTC VideoCall Application with CI/CD automation",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "npm run start:dev",
    "start:dev": "NODE_ENV=development node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:restart": "pm2 restart videocall-server",
    "pm2:stop": "pm2 stop videocall-server",
    "pm2:logs": "pm2 logs videocall-server --nostream",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:prod": "./scripts/deploy.sh production",
    "monitor": "./scripts/monitor.sh",
    "monitor:status": "./scripts/monitor.sh status",
    "monitor:health": "./scripts/monitor.sh health",
    "monitor:logs": "./scripts/monitor.sh logs",
    "docker:build": "docker build -t videocall:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health": "curl -f http://localhost:3001/api/status || exit 1",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install || true",
    "clean": "rm -rf node_modules server/node_modules client/node_modules logs/*.log",
    "setup": "npm run install:all && cp .env.example .env",
    "test": "echo 'No tests specified yet' && exit 0"
  },
  "keywords": [
    "webrtc",
    "videocall",
    "websocket", 
    "nodejs",
    "express",
    "turn-server",
    "russian-mobile",
    "ci-cd"
  ],
  "author": "malmik5482",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/malmik5482/VideoCall.git"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}